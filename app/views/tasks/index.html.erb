<h1 class="text-center my-4">To-Do List</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <%= link_to "Add Task", new_task_path, class: "btn btn-primary" %>
        </div>
        <ul class="list-group list-group-flush">
          <% @tasks.each do |task| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span>
                <%= task.title %> - <%= task.completed ? "✅" : "❌" %>
              </span>
              <span>
                <%= link_to "Edit", edit_task_path(task), class: "btn btn-secondary btn-sm" %> 
                <%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
              </span>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>